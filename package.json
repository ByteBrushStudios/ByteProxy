{
    "name": "@bbs/proxy",
    "version": "0.1.0",
    "private": false,
    "description": "The moderation thingy for A Thing.",
    "homepage": "https://github.com/ByteBrushStudios/Proxy#readme",
    "bugs": "https://github.com/ByteBrushStudios/Proxy/issues",
    "repository": {
        "type": "git",
        "url": "https://ByteBrushStudios/Proxy.git"
    },
    "license": "AGPL-3.0-only",
    "author": "Pixelated <https://codemeapixel.dev>",
    "scripts": {
        "build": "tsc",
        "dev": "bun run --watch src/index.ts",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "start": "bun run dist/index.js",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml}": [
            "prettier --write"
        ],
        "package.json": [
            "sort-package-json"
        ]
    },
    "dependencies": {
        "@elysiajs/swagger": "^1.2.0",
        "elysia": "^1.2.12",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@types/ws": "^8.18.1",
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "bun-types": "^1.0.1",
        "commitlint": "^19.6.1",
        "eslint": "^8.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.0.0",
        "sort-package-json": "^3.2.1",
        "typescript": "^5.2.2"
    }
}